{
  "expo": {
    "name": "solar-panels-app",
    "slug": "solar-panels-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to provide a better experience."
      }
    },
    "android": {
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "scheme": "solarpanelsapp",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Solar Panels App to use your location."
        }
      ],
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/SofiaSans-Regular.ttf",
            "./assets/fonts/Kurale-Regular.ttf",
            "./assets/fonts/RobotoSlab-Regular.ttf",
            "./assets/fonts/Marmelad-Regular.ttf",
            "./assets/fonts/Rubik-Regular.ttf"
          ]
        }
      ]
    ]
  }
}
